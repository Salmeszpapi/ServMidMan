@using ServMidMan.Helper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ServMidMan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ServMidMan.styles.css" asp-append-version="true" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
	<script src="~/lib/microsoft/signalr/dist/browser/chat/chat.js"></script>
</head>
<style>
	.orange-chat-bubble {
		color: #ff6600; /* Custom color for the chat bubble icon */
	}
</style>
<body>
	@if ((string)ViewData["LoggedIn"] == "True" || SiteGuardian.CurrentClientId.HasValue)
	{
	// Your code here
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ServMidMan</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
				        aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Profile">Profile</a>
						</li>
							@if ((string)ViewData["typeOfUser"] == "Client")
						{
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Upload">Upload product</a>
							</li>
						}
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-controller="Service" asp-action="Index">Requests</a>
							</li>

					</ul>
						<a href="/Chat">
							<span class="position-relative" style="margin-right:20px">
								<i class="fas fa-comment-dots fa-3x orange-chat-bubble"></i>
								<span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
									@if ((string)ViewData["LoggedIn"] == "True")
									{
										<text>1</text>
									}
									<span class="visually-hidden">New messages</span>
								</span>
							</span>
						</a>

					<!-- Logout button -->
					<form asp-controller="Home" asp-action="Logout" method="post" class="d-flex">
						<button type="submit" class="btn btn-outline-primary">Logout</button>
					</form>
				</div>
			</div>
		</nav>
	</header>
	}

	<div class="container-fluid" style="height: 80vh;">
		<main role="main" class="pb-3" style="height: 100%;">
			@RenderBody()
		</main>
	</div>
	<div id="popup-container" style="display:block">
		<div id="popup-message">New product has been added</div>
	</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
		// Function to show the popup
		function showPopup() {
			document.getElementById("popup-container").style.display = "block";
		}

		// Function to hide the popup
		function hidePopup() {
			document.getElementById("popup-container").style.display = "none";
		}

</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
