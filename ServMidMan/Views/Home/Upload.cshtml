<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centered Form with Border</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
	<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
	<script src="~/lib/microsoft/signalr/dist/browser/chat/chat.js"></script>
    <style>
        .centered-form {
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Align to the top */
            padding-top: 50px; /* Adjust top padding */
        }

        .bordered-form {
            border: 2px solid #8B4513; /* Brown border color */
            padding: 20px;
            border-radius: 10px;
			background-color:white;

        }

        .image-preview-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

        .image-preview {
            max-width: 150px;
            max-height: 150px;
            border: 2px solid #8B4513; /* Brown border color */
            border-radius: 5px;
        }
    </style>
</head>
<body>

<div class="centered-form">

		<form class="bordered-form" id="ProductUploadedButtonForm" method="post" action="/Home/NewProduct" enctype="multipart/form-data">
		<center><h2>Upload new product</h2></center>
		<div class="form-row">
			<div class="col-md-4 mb-3">
				<label for="validationDefault01">Product name</label>
					<input type="text" name="Name" class="form-control" id="ProductUploadedButtonForm1" placeholder="Title" required>
			</div>

		</div>
		<div class="form-row">
			<div class="col-md-2 mb-3">
				<label for="validationDefault01">Category</label>
					<select class="form-control" id="ProductUploadedButtonForm2" name="Category" onchange="updateHiddenInput()">
					<option selected>Category</option>
					<option value="Electronincs">Electronincs </option>
					<option value="Mobile">Mobile</option>
					<option value="PC">PC</option>
					<option value="Notebook">Notebook</option>
					<option value="Camera">Camera</option>
					<option value="Car">Car</option>
					<option value="Vehchile">Vehchile</option>
					<option value="Car">Car</option>
					<option value="Motorcycle">Motorcycle</option>
					<option value="Bicycle">Bicycle</option>
				</select>
			</div>

		</div>
		<div class="form-row">
			<div class="col-md-6 mb-3">
				<label for="validationDefault01">Description</label>
					<textarea name="Description" class="form-control" id="ProductUploadedButtonForm3" placeholder="Description" rows="4" required></textarea>
			</div>

		</div>

		<div class="form-row">
			<div class="col-md-4 mb-3">
				<label for="validationDefault03">Price</label>
				<div class="input-group">
						<input type="text" class="form-control" id="ProductUploadedButtonForm4" name="Price" oninput="validateNumber(this)" required>
					<div class="input-group-append">
						<span class="input-group-text">€</span>
					</div>

				</div>
					<label for="validationDefault03" style="margin-top:10px;">ProductUploadedButtonForm5</label>
				<div class="input-group">
					<input type="text" name="Location" class="form-control" id="validationDefault03" placeholder="Bratislavsak cesta 1713" required>
				</div>

			</div>

			<div class="form-group">

				<label for="fileInput">Select Image(s):</label>
					<input type="file" name="fileInput" id="ProductUploadedButtonForm6" accept="image/*" multiple onchange="previewImages(event)" />

				<div class="image-preview-container" id="imagePreviewContainer">
					<!-- Image previews will be dynamically added here -->
				</div>
			</div>

		</div>
		<div class="form-group">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
				<label class="form-check-label" for="invalidCheck2">
					Agree to terms and conditions
				</label>
			</div>
		</div>
			<button class="btn btn-primary" id="ProductUploadedButton" type="submit" >Submit form</button>
	</form>
		<input type="hidden" id="sendButton" value="Send Message" />
		@* <button class="btn btn-primary" id="ProductUploadedButton">Submit2 form</button> *@
</div>
    <script>
        function previewImages(event) {
            var input = event.target;
            var imagesContainer = document.getElementById('imagePreviewContainer');

            // Clear existing previews
            imagesContainer.innerHTML = '';

            // Iterate over selected files
            for (var i = 0; i < input.files.length; i++) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    // Create image element
                    var imgElement = document.createElement('img');
                    imgElement.classList.add('image-preview');
                    imgElement.src = e.target.result;

                    // Append image to container
                    imagesContainer.appendChild(imgElement);
                };
                // Read file as data URL
                reader.readAsDataURL(input.files[i]);
            }

        }

        function updateHiddenInput() {
            // Get the selected value
            var selectedValue = document.getElementById("CategoryRadio").value;

            // Update the value of the hidden input field
            document.getElementById("selectedValue").value = selectedValue;
        }
		function validateNumber(input) {
			input.value = input.value.replace(/[^0-9.]/g, ''); // Remove all characters except digits and dots
			input.value = input.value.replace(/^(\d*\.\d*).*$/, '$1'); // Allow only one dot
		}
    </script>
</body>
</html>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/lib/microsoft/signalr/dist/browser/chat/chat.js"></script>