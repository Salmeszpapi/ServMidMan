@model ProductWithImages
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Custom styles -->
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        .product-card {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-images img {
            width: 100%;
            margin-bottom: 20px;
        }

        .ratings {
            margin-top: 20px;
        }

        .rating-stars {
            font-size: 24px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="product-card">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="product-images">
                                <!-- Placeholder for product images -->
                                @* <img src="data:image;base64,@Convert.ToBase64String(Model.ImageData)" alt="Product Image"> *@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h2>{{ @Model.Name }}</h2>
                            <p><strong>Description:</strong> {{ Model.Description }}</p>
                            <p><strong>Category:</strong> {{ Model.Category }}</p>
                            <p><strong>Price:</strong> ${{ Model.Price }}</p>
                            <p><strong>Location:</strong> {{ Model.Location }}</p>
                            <p><strong>Created Date:</strong> {{ Model.CreatedDate }}</p>
                            <div class="ratings">
                                <p><strong>Ratings:</strong></p>
                                <div class="rating-stars">
                                    <!-- Loop through to generate stars based on average rating -->
                                    @for (int i = 0; i < 2; i++)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    <!-- Show remaining empty stars -->
                                    @for (int i = 4; i < 5; i++)
                                    {
                                        <i class="far fa-star text-warning"></i>
                                    }
                                </div>
                            </div>
                            <div class="text-center mt-4">
                                <button class="btn btn-primary mr-2">Buy</button>
                                <button class="btn btn-success mr-2">Write</button>
                                <button class="btn btn-danger">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
