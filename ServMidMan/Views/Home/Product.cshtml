<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Custom styles -->
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        .product-card {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-images img {
            width: 100%;
            margin-bottom: 20px;
        }

        .ratings {
            margin-top: 20px;
        }

        .rating-stars {
            font-size: 24px;
        }
        /* Style for the modal */
        .modal-dialog {
            max-width: 800px;
            margin: auto; /* Center the modal horizontally */
            margin-top: calc(50vh - 230px); /* Center the modal vertically */
        }

        .modal-content img {
            width: 100%;
            height: auto;
        }
    </style>

    <!-- Bootstrap and jQuery scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="product-card">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="product-images">
                                <!-- Placeholder for product images -->
                                <img src="data:image;base64,@Convert.ToBase64String(Model.ImageResources[0])" alt="Product Image" onclick="showImage(this)" data-toggle="modal" data-target="#imageModal">
                            </div>
                            <div class="image-indicators">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <span class="image-indicator" onclick="showImageAtIndex(@i)"></span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h2>@Model.Products.Name</h2>
                            <p><strong>Description:</strong>@Model.Products.Description</p>
                            <p><strong>Category:</strong> @Model.Products.Price </p>
                            <p><strong>Price:</strong> @Model.Products.Price </p>
                            <p><strong>Location:</strong>@Model.Products.Location</p>
                            <p><strong>Created Date:</strong>@Model.Products.CreatedDate </p>
                            <div class="ratings">
                                <p><strong>Ratings:</strong></p>
                                <div class="rating-stars">
                                    <!-- Loop through to generate stars based on average rating -->
                                    @for (int i = 0; i < 2; i++)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    <!-- Show remaining empty stars -->
                                    @for (int i = 4; i < 5; i++)
                                    {
                                        <i class="far fa-star text-warning"></i>
                                    }
                                </div>
                            </div>
                            <div class="text-center mt-4">
                                <button class="btn btn-primary mr-2">Buy</button>
                                <button class="btn btn-success mr-2">Write</button>
                                <button class="btn btn-danger">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal for displaying the image -->
    <div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <img src="" id="modalImage" class="img-fluid" alt="Modal Image">
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript to handle the modal functionality -->
    <script>
        function showImage(element) {
            var imageUrl = element.src;
            document.getElementById('modalImage').src = imageUrl;
        }
    </script>
</body>
</html>
