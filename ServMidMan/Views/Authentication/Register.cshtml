<div class="container d-flex justify-content-center align-items-center">
    <div class="card">
        <div class="p-3 border-bottom d-flex align-items-center justify-content-center">
            <h5>Register to ServMidMan</h5>
        </div>
        <div class="p-3 d-flex align-items-center justify-content-center">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Error:</strong> @ViewBag.ErrorMessage
                </div>
            }
        </div>
        <div class="p-3 px-4 py-4 border-bottom">
            <form method="post" action="/Authentication/RegisterHandling">
                <input type="text" class="form-control mb-2" name="Email" placeholder="Email/Username" required />
                <div class="form">
                    <input type="password" class="form-control" name="Password" placeholder="Password" required />
                    <input type="password" class="form-control" name="Password2" placeholder="Password again" required style="margin: 9px 10px 0px 0px;" />
                </div>
                <!-- Radio buttons for user type -->
                <div class="form-group">
                    <label>User Type:</label><br>
                    <input type="radio" id="client" name="UserType" value="client" checked style="display: inline-block; margin-right: 5px;">
                    <label for="client" style="display: inline-block; margin-right: 15px;">Client</label>

                    <input type="radio" id="servicer" name="UserType" value="servicer" style="display: inline-block; margin-right: 5px;">
                    <label for="servicer" style="display: inline-block; margin-right: 15px;">Servicer</label>

                    <input type="radio" id="bots" name="UserType" value="bots" style="display: inline-block;">
                    <label for="bots" style="display: inline-block;">Bots</label>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger btn-block continue" style="margin: 9px 10px 0px 0px;">Register</button>
                </div>
            </form>
            <div class="p-3 border-bottom d-flex align-items-center justify-content-center">
                <h5></h5>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-info btn-block continue facebook-button d-flex justify-content-center align-items-center text-center" style="margin:10px">
                    <i class="fa fa-facebook ml-2"></i>
                    <span class="ml-5 px-4">Continue with Facebook</span>
                </button>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-danger btn-block continue google-button text-center">
                    <i class="fa fa-google ml-2"></i>
                    <span class="ml-5 px-4">Continue with Google</span>
                </button>
            </div>
            <div class="p-3 d-flex flex-row justify-content-center align-items-center member">
                <span>Already member? </span>
                <a href="/Authentication/Welcome" class="text-decoration-none ml-2">Log In</a>
            </div>
        </div>
    </div>
</div>
