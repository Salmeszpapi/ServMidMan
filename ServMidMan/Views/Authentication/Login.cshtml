<div class="container d-flex justify-content-center align-items-center">
    <div class="card">
        <div class="p-3 border-bottom d-flex align-items-center justify-content-center">
            <h5>Login to ServMidMan</h5>
        </div>
        <div class="p-3 px-4 py-4 border-bottom">
            <form method="post" action="/Authentication/Login">
                <input type="text" class="form-control mb-2" name="Email" placeholder="Email" autocomplete="off"/>
                <div class="form">
                    <input type="password" class="form-control" name="Password" placeholder="Password" autocomplete="off" />
                    <a href="#">Forgot?</a>
                </div>
                <button type="submit" class="btn btn-danger btn-block continue">Continue</button>
            </form>
            <div class="d-flex justify-content-center align-items-center mt-3 mb-3">
                <span class="line"></span>
                <small class="px-2 line-text">OR</small>
                <span class="line"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-info btn-block continue facebook-button d-flex justify-content-center align-items-center text-center" style="margin:10px">
                    <i class="fa fa-facebook ml-2"></i>
                    <span class="ml-5 px-4">Continue with Facebook</span>
                </button>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-danger btn-block continue google-button text-center">
                    <i class="fa fa-google ml-2"></i>
                    <span class="ml-5 px-4">Continue with Google</span>
                </button>
            </div>

        </div>
        <div class="p-3 d-flex flex-row justify-content-center align-items-center member">
            <span>Not a member? </span>
            <a href="#" class="text-decoration-none ml-2">SIGNUP</a>
        </div>
    </div>
</div>
